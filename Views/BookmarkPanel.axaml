<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Alkitab.ViewModels"
             x:DataType="viewModels:MainWindowViewModel"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="200"
             x:Class="Alkitab.Views.BookmarkPanel">
    
    <UserControl.Resources>
        <MenuFlyout x:Key="BookmarkFlyout">
            <MenuItem Header="Delete" Click="FlyoutMenuDelete_OnClick"/>
        </MenuFlyout>
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="Border.DotsButton">
            <Setter Property="CornerRadius" Value="50"></Setter>
            <Setter Property="Padding" Value="10"></Setter>
            <Setter Property="Cursor" Value="Hand"></Setter>
        </Style>
        
        <Style Selector="Border.DotsButton:pointerover">
            <Setter Property="Background" Value="Gray"></Setter>
        </Style>
    </UserControl.Styles>
    
    <Grid RowDefinitions="*, *">
        <TextBlock Grid.Row="0" Text="Tidak ada Pembatas Buku."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontFamily="{StaticResource Poetsen}"
                   FontSize="16"
                   Padding="20"
                   IsVisible="{Binding Bookmark.Count, FallbackValue=., Converter={StaticResource IsBookmarkEmptyConverter}, ConverterParameter=watermark}"
                   />
        
        <ListBox  Grid.Row="1"  Width="300" Padding="20"
                  ItemsSource="{Binding Bookmark}"
                  VerticalAlignment="Center" HorizontalAlignment="Center"
                  IsVisible="{Binding Bookmark.Count, FallbackValue=., Converter={StaticResource IsBookmarkEmptyConverter}, ConverterParameter=content}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*, *">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding bookname}"></TextBlock>
                            <TextBlock Text=" " />
                            <TextBlock Text=" " />
                            <TextBlock Text="{Binding chapter}"></TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Text=":"></TextBlock>
                            <TextBlock Text=" "></TextBlock>
                            <TextBlock Text="{Binding verse}"></TextBlock>
                        </StackPanel>
                        
                        <Border Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right"
                                Classes="DotsButton" x:Name="DotsButton" ToolTip.Tip="Menu"
                                ContextFlyout="{StaticResource BookmarkFlyout}"
                                DataContext="{Binding}"
                                PointerPressed="DotsButton_OnPointerPressed">
                            <Image x:Name="DotsIcon"
                                   Source="/Assets/dots.png"
                                   Width="14"/>
                        </Border>
                    </Grid>
                </DataTemplate>        
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
